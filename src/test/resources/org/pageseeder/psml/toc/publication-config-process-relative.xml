<?xml version="1.0"?>
<publication-config>

 
  <levels xref-relative-to="document"
          para-relative-to="document"          
          para-adjust="content"
          heading-adjust="content" />
           
  <!-- <numbering [document-label="xyz"]> -->
  <numbering>
    <schemes>
      <!-- type="decimal|upperalpha|loweralpha|upperroman|lowerroman" -->
      <scheme level="1" type="decimal" format="[1.]" element="any" />
      <scheme level="2" type="decimal" format="[1.][2.]" element="any" />
      <scheme level="3" type="decimal" format="[1.][2.][3.]" element="any" />
      <scheme level="4" type="decimal" format="[1.][2.][3.][4.]" element="any" />
      <scheme level="5" type="loweralpha" format="[(5)]" element="any" />
      <scheme level="6" type="lowerroman" format="[(6)]" element="any" />
      <scheme level="7" type="upperalpha" format="[(7)]" element="any" />
      <scheme level="8" type="upperroman" format="[(8)]" element="any" />
      <scheme level="9" type="loweralpha" format="[9]" element="any" />
    </schemes>
  </numbering>
</publication-config>
